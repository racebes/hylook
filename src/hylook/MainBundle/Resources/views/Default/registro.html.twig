{% extends 'hylookMainBundle:Default:layout.html.twig' %}
{% block header %}{{ include('hylookMainBundle:Default:header.html.twig') }}{% endblock %}
{% block slider %}{{ include('hylookMainBundle:Default:slider.html.twig') }}{% endblock %}
{% block content %}


			<div class="content-wrap">

				<div class="container clearfix">
					<div class="row clearfix">

						<div class="col-lg-5">
							<div class="heading-block topmargin">
								<h1>REGISTRO DE USUARIOS</h1>								
							</div>
							<p class="lead">Formulario para el registro de nuevos usuarios</p>
						</div>

						<div class="col-lg-12">

						
							{{ form_start(formulario, {'attr' : { 'id' : 'nuevo-usuario'}}) }}
							
								{{ form_errors(formulario) }}
								<fieldset>
									<legend>Datos de usuario</legend>
									{{ form_label(formulario.nombre, 'Nombre y apellidos: ') }}<span>{{ form_widget(formulario.nombre) }}</span> <br>
									{{ form_label(formulario.nombre, 'E-mail: ') }}<span>{{ form_widget(formulario.email) }}</span> <br>
									{{ form_label(formulario.usernick, 'Usuario o Nick: ') }} <span>{{ form_widget(formulario.usernick) }}</span> <br>
									{{ form_row(formulario.passacceso) }}
									
								</fieldset>
								{{ form_rest(formulario) }}
								
							
							{{ form_end(formulario) }}

						</div>

					</div>
				</div>

				<div class="clear"></div>

				
			</div>

	
{% endblock %}
{% block footer %}{{ include('hylookMainBundle:Default:footer.html.twig') }}{% endblock %}